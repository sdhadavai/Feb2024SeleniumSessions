<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestNG Regression Suite" verbose="3" parallel="tests"
	thread-count="3">
	<test name="Google Test in Chrome">
		<parameter name="browser" value="chrome" />
		<parameter name="url" value="https://www.google.com"/>
		<classes>
			<class name="mytests.GoogleTest" />
		</classes>
	</test>


	<test name="Open Cart Test">
		<parameter name="browser" value="firefox" />
		<parameter name="url" 
		value="https://naveenautomationlabs.com/opencart/index.php?route=account/login"/>
		<classes>
			<class name="mytests.OpenCartLoginTest" />
		</classes>
	</test>

	<test name="OrangeHRM Test">
		<parameter name="browser" value="edge" />
		<parameter name="url" value="https://www.orangehrm.com/en/30-day-free-trial"/>
		<classes>
			<class name="mytests.OrangeHRMTest" />
		</classes>
	</test>

</suite>
